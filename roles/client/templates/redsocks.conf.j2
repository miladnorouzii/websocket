base {
  log_debug = on;
  log_info = on;
  //log = "stderr";
  daemon = on;
  redirector = iptables;
  log="file:/var/log/redsocks.log";
}

redsocks {
  local_ip = 0.0.0.0;
  local_port = 54321;

  ip = 127.0.0.1;
  port = {{ local_port }};

  // known types: socks4, socks5, http-connect, http-relay
  type = socks5;

  // login = "foobar";
  // password = "baz";
}

redudp {
  local_ip = 127.0.0.1;
  local_port = 10053;

  ip = 127.0.0.1;
  port = {{ local_port }};

  dest_ip = 8.8.8.8;
  dest_port = 53;

  udp_timeout = 30;
  udp_timeout_stream = 180;
}

dnstc {
  local_ip = 127.0.0.1;
  local_port = 5300;
}
